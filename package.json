{
  "name": "envenv",
  "version": "1.0.0",
  "description": "Team collaboration made a breeze, share critical information without breaking a sweat.",
  "scripts": {
    "compose-dev": "docker-compose -p dev-env up",
    "compose-test": "docker-compose -p test-env -f ./docker-compose.test.yml up",
    "decompose-dev": "docker-compose -p dev-env down",
    "decompose-test": "docker-compose -p test-env -f ./docker-compose.test.yml down"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielmendezc/envenv.git"
  },
  "keywords": [
    "Team",
    "collaboration",
    "security",
    "env"
  ],
  "author": "Gabriel Méndez & Blas Santomé",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gabrielmendezc/envenv/issues"
  },
  "homepage": "https://github.com/gabrielmendezc/envenv#readme",
  "devDependencies": {
    "@prisma/cli": "^2.0.0-beta.5",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.11.1",
    "@typescript-eslint/eslint-plugin": "^2.24.0",
    "@typescript-eslint/parser": "^2.27.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.2.5",
    "lerna": "^3.20.2",
    "lint-staged": "^10.1.4",
    "prettier": "^2.0.4",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{js,css,md,ts,tsx}": "prettier --write"
  }
}
